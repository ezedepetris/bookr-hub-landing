  <script>
    // Tab functionality for screenshots
    const tabButtons = document.querySelectorAll('.tab-button');
    const screenshotGrid = document.getElementById('screenshot-grid');

    const adminContent = `
      <div class="screenshot-item animate-on-scroll visible">
        <div class="screenshot-placeholder">
          <img src="/gifs/my-calendar.gif" alt="Calendar Management" style="width: 100%; height: 100%; object-fit: cover;">
