  <script>
    // Initialize GSAP
    gsap.registerPlugin(ScrollTrigger, ScrollToPlugin);

    // Header scroll effect
    function initHeader() {
      const header = document.querySelector('header');

      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          header.classList.add('scrolled');
        } else {
          header.classList.remove('scrolled');
        }
      });
    }

    // Mobile menu toggle
    function initMobileMenu() {
      const mobileToggle = document.querySelector('.mobile-toggle');
      const mobileMenu = document.querySelector('.mobile-menu');

      mobileToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('active');
        mobileToggle.textContent = mobileMenu.classList.contains('active') ? 'âœ•' : 'â˜°';
      });

      // Close mobile menu when clicking on links
      const mobileLinks = document.querySelectorAll('.mobile-menu a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.remove('active');
          mobileToggle.textContent = 'â˜°';
        });
      });
    }

    // Smooth scrolling for anchor links
    function initSmoothScroll() {
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
          e.preventDefault();

          const targetId = this.getAttribute('href');
          if (targetId === '#') return;

          const targetElement = document.querySelector(targetId);
          if (targetElement) {
            gsap.to(window, {
              duration: 1,
              scrollTo: {
                y: targetElement,
                offsetY: 80
              },
              ease: 'power2.inOut'
            });
          }
        });
      });
    }

    // Initialize animations with safer approach
    function initAnimations() {
      // Simple fade-in animation for sections
      const sections = document.querySelectorAll('section');
      sections.forEach(section => {
        gsap.fromTo(section,
          { opacity: 0, y: 30 },
          {
            opacity: 1,
            y: 0,
            duration: 0.8,
            scrollTrigger: {
              trigger: section,
              start: "top 80%",
              once: true
            }
          }
        );
      });

      // Section headers
      const sectionHeadings = document.querySelectorAll('.section-heading');
      sectionHeadings.forEach(heading => {
        gsap.fromTo(heading,
          { opacity: 0, y: 20 },
          {
            opacity: 1,
            y: 0,
            duration: 0.8,
            scrollTrigger: {
              trigger: heading,
              start: "top 80%",
              once: true
            }
          }
        );
      });

      // Feature cards with stagger
      if (document.querySelector('.features-grid')) {
        gsap.fromTo('.feature-card',
          { opacity: 0, y: 20 },
          {
            opacity: 1,
            y: 0,
            duration: 0.5,
            stagger: 0.1,
            scrollTrigger: {
              trigger: '.features-grid',
              start: "top 80%",
              once: true
            }
          }
        );
      }

      // Steps with stagger
      if (document.querySelector('.steps')) {
        gsap.fromTo('.step',
          { opacity: 0, x: index => index % 2 === 0 ? -30 : 30 },
          {
            opacity: 1,
            x: 0,
            duration: 0.8,
            stagger: 0.2,
            scrollTrigger: {
              trigger: '.steps',
              start: "top 80%",
              once: true
            }
          }
        );
      }

      // Pricing cards with stagger
      if (document.querySelector('.pricing-plans')) {
        gsap.fromTo('.plan-card',
          { opacity: 0, y: 30, scale: 0.95 },
          {
            opacity: 1,
            y: 0,
            scale: index => index === 1 ? 1.05 : 1, // Middle card is popular
            duration: 0.8,
            stagger: 0.15,
            scrollTrigger: {
              trigger: '.pricing-plans',
              start: "top 80%",
              once: true
            }
          }
        );
      }

      // Testimonial fade in
      if (document.querySelector('.testimonial-card')) {
        gsap.fromTo('.testimonial-card',
          { opacity: 0, y: 30 },
          {
            opacity: 1,
            y: 0,
            duration: 0.8,
            scrollTrigger: {
              trigger: '.testimonial-card',
              start: "top 80%",
              once: true
            }
          }
        );
      }

      // CTA section
      if (document.querySelector('.cta-content')) {
        gsap.fromTo('.cta-content',
          { opacity: 0, y: 30 },
          {
            opacity: 1,
            y: 0,
            duration: 0.8,
            scrollTrigger: {
              trigger: '.cta-section',
              start: "top 80%",
              once: true
            }
          }
        );

        // Animate CTA shapes
        gsap.to('.cta-shape-1', {
          y: -30,
          x: 20,
          rotation: '-10deg',
          duration: 12,
          repeat: -1,
          yoyo: true,
          ease: 'sine.inOut'
        });

        gsap.to('.cta-shape-2', {
          y: 30,
          x: -20,
          rotation: '10deg',
          duration: 15,
          repeat: -1,
          yoyo: true,
          ease: 'sine.inOut'
        });
      }

      // Calendar animation in hero
      if (document.querySelector('svg')) {
        gsap.fromTo('svg rect, svg text, svg circle',
          { opacity: 0 },
          { opacity: 1, duration: 0.8, stagger: 0.05 }
        );
      }
    }

    // Initialize everything when document is ready
    document.addEventListener('DOMContentLoaded', function() {
      initHeader();
      initMobileMenu();
      initSmoothScroll();
      initAnimations();
    });
  </script>
