<!DOCTYPE html>
<html lang="<%= session[:locale] %>">
<head>
  <link rel="stylesheet" href="/css/styles.css?v=1.0.0">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/icon.png" type="image/png">
  <link rel="icon" href="/images/icon.svg" type="image/svg+xml">
  <title><%= I18n.t('site.title') %></title>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://bookrhub.com/">
  <meta property="og:title" content="<%= I18n.t('site.title') %>">
  <meta property="og:description" content="<%= I18n.t('site.description') %>">
  <meta property="og:image" content="https://bookrhub.com/images/og-preview.jpg">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="https://bookrhub.com/">
  <meta property="twitter:title" content="<%= I18n.t('site.title') %>">
  <meta property="twitter:description" content="<%= I18n.t('site.description') %>">
  <meta property="twitter:image" content="https://bookrhub.com/images/og-preview.jpg">

  <!-- Additional tags -->
  <meta property="og:site_name" content="BookrHub">
  <meta property="og:locale" content="<%= session[:locale] %>">
  <meta name="theme-color" content="#2563eb">
</head>
<body>
  <!-- Navigation -->
  <nav>
    <div class="nav-container">
    <a href="https://bookrhub.com" class="logo">
      <img src="/images/isologo.svg" alt="BookrHub Logo" class="isologo-image" width="160">
    </a>
      <div class="nav-links">
        <a href="#features"><%= I18n.t('navigation.features') %></a>
        <a href="#screenshots"><%= I18n.t('navigation.how_it_works') %></a>
        <a href="#examples"><%= I18n.t('navigation.examples') %></a>
        <a href="#pricing"><%= I18n.t('navigation.pricing') %></a>
        <a href="https://my.bookrhub.com/signup" class="cta-button"><%= I18n.t('navigation.get_started') %></a>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <div class="hero-text">
        <h1><%= I18n.t('site.tagline') %></h1>
        <p><%= I18n.t('site.subtitle') %></p>
        <div class="hero-buttons">
          <a href="https://my.bookrhub.com/signup" class="btn-primary"><%= I18n.t('buttons.start_free_trial') %></a>
          <a href="https://bookrhub.com/gifs/barber-landing.gif" class="btn-secondary"><%= I18n.t('buttons.watch_demo') %></a>
        </div>
      </div>
      <div class="hero-image">
        <div class="iphone-mockup">
          <div class="iphone-screen">
            <img src="/gifs/iphone.gif" alt="Landing Page" style="width: 100%; height: 100%; object-fit: cover;">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="features">
    <div class="features-container">
      <div class="section-header">
        <h2><%= I18n.t('features.title') %></h2>
        <p><%= I18n.t('features.subtitle') %></p>
      </div>
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3><%= I18n.t('features.easy_scheduling.title') %></h3>
          <p><%= I18n.t('features.easy_scheduling.description') %></p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </div>
          <h3><%= I18n.t('features.team_management.title') %></h3>
          <p><%= I18n.t('features.team_management.description') %></p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3><%= I18n.t('features.smart_reminders.title') %></h3>
          <p><%= I18n.t('features.smart_reminders.description') %></p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3><%= I18n.t('features.clear_analytics.title') %></h3>
          <p><%= I18n.t('features.clear_analytics.description') %></p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3><%= I18n.t('features.mobile_ready.title') %></h3>
          <p><%= I18n.t('features.mobile_ready.description') %></p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
            </svg>
          </div>
          <h3><%= I18n.t('features.your_brand.title') %></h3>
          <p><%= I18n.t('features.your_brand.description') %></p>
        </div>
      </div>
    </div>
  </section>

  <!-- Screenshots Section -->
  <section id="screenshots" class="screenshots">
    <div class="screenshots-container">
      <div class="section-header">
        <h2><%= I18n.t('how_it_works.title') %></h2>
        <p><%= I18n.t('how_it_works.subtitle') %></p>
      </div>
      <div class="screenshot-tabs">
        <button class="tab-button active"><%= I18n.t('how_it_works.admin_dashboard') %></button>
        <button class="tab-button"><%= I18n.t('how_it_works.customer_experience') %></button>
      </div>
      <div class="screenshot-grid">
        <div class="screenshot-item">
          <div class="screenshot-placeholder">
            <img src="/gifs/my-calendar.gif" alt="Calendar Management" style="width: 100%; height: 100%; object-fit: cover;">
          </div>
          <div class="screenshot-text"><%= I18n.t('how_it_works.calendar_management') %></div>
        </div>
        <div class="screenshot-item">
          <div class="screenshot-placeholder">
            <img src="/gifs/my-overview.gif" alt="Booking Overview" style="width: 100%; height: 100%; object-fit: cover;">
          </div>
          <div class="screenshot-text"><%= I18n.t('how_it_works.booking_overview') %></div>
        </div>
        <div class="screenshot-item">
          <div class="screenshot-placeholder">
            <img src="/gifs/my-configuration.gif" alt="Service Configuration" style="width: 100%; height: 100%; object-fit: cover;">
          </div>
          <div class="screenshot-text"><%= I18n.t('how_it_works.company_settings') %></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Landing Page Examples -->
  <section id="examples" class="examples">
    <div class="examples-container">
      <div class="section-header">
        <h2><%= I18n.t('business_pages.title') %></h2>
        <p><%= I18n.t('business_pages.subtitle') %></p>
      </div>
      <div class="example-showcase">
        <div class="example-text">
          <h3><%= I18n.t('business_pages.customized_brand.title') %></h3>
          <p><%= I18n.t('business_pages.customized_brand.description') %></p>
          <ul style="list-style: none; padding: 0;">
            <li style="padding: 0.5rem 0; color: #4b5563;">✓ Custom colors and branding</li>
            <li style="padding: 0.5rem 0; color: #4b5563;">✓ Your own domain</li>
            <li style="padding: 0.5rem 0; color: #4b5563;">✓ Mobile optimized</li>
            <li style="padding: 0.5rem 0; color: #4b5563;">✓ SEO friendly</li>
          </ul>
        </div>
        <div class="example-preview">
          <div class="screenshot-placeholder">
            <img src="/gifs/barber-landing.gif" alt="Landing Page" style="width: 100%; height: 100%; object-fit: cover;">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section id="pricing" class="pricing">
    <div class="pricing-container">
      <div class="section-header">
        <h2><%= I18n.t('pricing.title') %></h2>
        <p><%= I18n.t('pricing.subtitle') %></p>
      </div>
      <div class="pricing-cards">
        <div class="pricing-card">
          <div class="plan-name"><%= I18n.t('pricing.independent') %></div>
          <div class="plan-price"><%= I18n.t('pricing.free') %></div>
          <p class="plan-period"><%= I18n.t('pricing.for_ever') %></p>
          <ul class="plan-features">
            <% I18n.t('plan_features.independent').each do |feature| %>
              <li><%= feature %></li>
            <% end %>
          </ul>
          <a href="https://my.bookrhub.com/signup?plan=independent" class="cta-button" style="width: 100%; display: block; text-align: center;"><%= I18n.t('cta.get_started') %></a>
        </div>
        <div class="pricing-card featured">
          <span class="featured-badge"><%= I18n.t('pricing.most_popular') %></span>
          <div class="plan-name"><%= I18n.t('pricing.team') %></div>
          <div class="plan-price"><%= @prices['team'][:formatted] %></div>
          <p class="plan-period"><%= I18n.t('pricing.per_month') %></p>
          <ul class="plan-features">
            <% I18n.t('plan_features.team').each do |feature| %>
              <li><%= feature %></li>
            <% end %>
          </ul>
          <a href="https://my.bookrhub.com/signup?plan=team" class="cta-button" style="width: 100%; display: block; text-align: center;"><%= I18n.t('cta.get_started') %></a>
        </div>
        <div class="pricing-card">
          <div class="plan-name"><%= I18n.t('pricing.business') %></div>
          <div class="plan-price"><%= @prices['business'][:formatted] %></div>
          <p class="plan-period"><%= I18n.t('pricing.per_month') %></p>
          <ul class="plan-features">
            <% I18n.t('plan_features.business').each do |feature| %>
              <li><%= feature %></li>
            <% end %>
          </ul>
          <a href="https://my.bookrhub.com/signup?plan=business" class="cta-button" style="width: 100%; display: block; text-align: center;"><%= I18n.t('cta.first_month_on_us') %></a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-content">
      <h2><%= I18n.t('cta.ready_to_simplify') %></h2>
      <p><%= I18n.t('cta.join_thousands') %></p>
      <a href="https://my.bookrhub.com/signup" class="btn-primary" style="font-size: 1.25rem; padding: 1.25rem 2.5rem;"><%= I18n.t('cta.start_for_free') %></a>
      <p style="margin-top: 1rem; font-size: 0.875rem; color: #9ca3af;"><%= I18n.t('cta.no_credit_card') %></p>
    </div>
  </section>

  <!-- Footer -->
  <footer>
    <div class="footer-content">
      <div class="footer-section">
        <h3><%= I18n.t('footer.product') %></h3>
        <a href="#features"><%= I18n.t('navigation.features') %></a>
        <a href="#pricing"><%= I18n.t('navigation.pricing') %></a>
      </div>
      <div class="footer-section">
        <h3><%= I18n.t('footer.company') %></h3>
        <a href="#https://bookrhub.com/about"><%= I18n.t('footer.about_us') %></a>
        <a href="#https://blog.bookrhub.com"><%= I18n.t('footer.blog') %></a>
        <a href="#https://bookrhub.com/contact"><%= I18n.t('footer.contact_us') %></a>
      </div>
      <div class="footer-section">
        <h3><%= I18n.t('footer.support') %></h3>
        <a href="#https://support.bookrhub.com"><%= I18n.t('footer.help_center') %></a>
      </div>
      <div class="footer-section">
        <h3><%= I18n.t('footer.legal') %></h3>
        <a href="#https://bookrhub.com/privacy"><%= I18n.t('footer.privacy_policy') %></a>
        <a href="#https://bookrhub.com/terms"><%= I18n.t('footer.terms_of_service') %></a>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; 2025 BookrHub. All rights reserved.</p>
      <span><%= I18n.t('footer.powered_by') %> <a href="https://plumdigital.co.nz" target="_blank" class="copyright-link">Plum Digital</a></span>
    </div>
  </footer>

  <script>
    // Tab functionality for screenshots
    document.querySelectorAll('.tab-button').forEach(button => {
      button.addEventListener('click', function() {
        document.querySelectorAll('.tab-button').forEach(b => b.classList.remove('active'));
        this.classList.add('active');

        const screenshotGrid = document.querySelector('.screenshot-grid');
        const tabName = this.textContent;

        if (tabName === 'Admin Dashboard') {
          screenshotGrid.innerHTML = `
            <div class="screenshot-item">
              <div class="screenshot-placeholder">
                <img src="/gifs/my-calendar.gif" alt="Calendar Management" style="width: 100%; height: 100%; object-fit: cover;">
              </div>
              <div class="screenshot-text"><%= I18n.t('how_it_works.calendar_management') %></div>
            </div>
            <div class="screenshot-item">
              <div class="screenshot-placeholder">
                <img src="/gifs/my-overview.gif" alt="Booking Overview" style="width: 100%; height: 100%; object-fit: cover;">
              </div>
              <div class="screenshot-text"><%= I18n.t('how_it_works.booking_overview') %></div>
            </div>
            <div class="screenshot-item">
              <div class="screenshot-placeholder">
                <img src="/gifs/my-configuration.gif" alt="Service Configuration" style="width: 100%; height: 100%; object-fit: cover;">
              </div>
              <div class="screenshot-text"><%= I18n.t('how_it_works.company_settings') %></div>
            </div>
          `;
        } else if (tabName === 'Customer Experience') {
          screenshotGrid.innerHTML = `
            <div class="screenshot-item">
              <div class="screenshot-placeholder">
                <img src="/gifs/barber-landing.gif" alt="Landing Page" style="width: 100%; height: 100%; object-fit: cover;">
              </div>
              <div class="screenshot-text"><%= I18n.t('customer_experience.landing_page') %></div>
            </div>
            <div class="screenshot-item">
              <div class="screenshot-placeholder">
                <img src="/gifs/barber-book.gif" alt="Date & Time Selection" style="width: 100%; height: 100%; object-fit: cover;">
              </div>
              <div class="screenshot-text"><%= I18n.t('customer_experience.date_time_selection') %></div>
            </div>
            <div class="screenshot-item">
              <div class="screenshot-placeholder">
                <img src="/gifs/barber-confirmation.gif" alt="Booking Confirmation" style="width: 100%; height: 100%; object-fit: cover;">
              </div>
              <div class="screenshot-text"><%= I18n.t('customer_experience.booking_confirmation') %></div>
            </div>
          `;
        } else {
          screenshotGrid.innerHTML = ``;
        }
      });
    });

    // Smooth scroll
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  </script>
</body>
</html>
